<plugins>
	<plugin>
		<name>DialogBoxes</name>
		<description>A collection of server-side "modal" dialog boxes:
			QConfirmationDialog, QTextBoxPromptDialog, QRadioButtonPromptDialog.
		</description>
		<version>0.1</version>
		<platform_version>1.1</platform_version>
		<author name="Alex Weinstein, a.k.a. alex94040" email="alex94040 [at] yahoo [dot] com" />
		<files>
			<file type="control" filename="QPromptDialog.class.php" />
			<file type="control" filename="QTextBoxPromptDialog.class.php" />
			<file type="control" filename="QRadioButtonPromptDialog.class.php" />
			<file type="control" filename="QConfirmationDialog.class.php" />

			<file type="misc_include" filename="QConfirmationDialog.tpl.php" />
			<file type="misc_include" filename="QRadioButtonPromptDialog.tpl.php" />
			<file type="misc_include" filename="QTextBoxPromptDialog.tpl.php" />

			<file type="example" filename="more_dialog_boxes.php" />
			<file type="example" filename="more_dialog_boxes.tpl.php" />
		</files>
		<includes>
			<include_files classname="QPromptDialog" filename="QPromptDialog.class.php" />
			<include_files classname="QTextBoxPromptDialog" filename="QTextBoxPromptDialog.class.php" />
			<include_files classname="QRadioButtonPromptDialog" filename="QRadioButtonPromptDialog.class.php" />
			<include_files classname="QConfirmationDialog" filename="QConfirmationDialog.class.php" />
		</includes>
		<examples>
			<example filename="more_dialog_boxes.php" description="Pre-built Dialog Boxes: Confirmations and Prompts" />
		</examples>
	</plugin>

	<plugin>
		<name>QAutoCompleteTextBox</name>
		<description>Two implementations of auto-complete functionality: matching the user
			input against a pre-defined list, showing them the matches: server-side (Ajax)
			and client-side.
		</description>
		<version>0.1</version>
		<platform_version>1.1</platform_version>
		<author name="Alex Weinstein, a.k.a. alex94040" email="alex94040 [at] yahoo [dot] com" />
		<files>
			<file type="control" class="QAutoCompleteTextBoxBase" filename="QAutoCompleteTextBoxBase.class.php" />
			<file type="control" class="QAjaxAutoCompleteTextBox" filename="QAjaxAutoCompleteTextBox.class.php" />
			<file type="control" class="QJavaScriptAutoCompleteTextBox" filename="QJavaScriptAutoCompleteTextBox.class.php" />

			<file type="image" filename="indicator.gif" />

			<file type="css" filename="jquery.autocomplete.css" />

			<file type="js" filename="_readme.txt" />
			<file type="js" filename="jquery.autocomplete.js" />
			<file type="js" filename="jquery.bgiframe.js" />

			<file type="example" filename="autocomplete.php" />
			<file type="example" filename="autocomplete.tpl.php" />
		</files>
		<includes>
			<include_files classname="QAutoCompleteTextBoxBase" filename="QAutoCompleteTextBoxBase.class.php" />
			<include_files classname="QAjaxAutoCompleteTextBox" filename="QAjaxAutoCompleteTextBox.class.php" />
			<include_files classname="QJavaScriptAutoCompleteTextBox" filename="QJavaScriptAutoCompleteTextBox.class.php" />
		</includes>
		<examples>
			<example filename="autocomplete.php" description="* Auto-complete Textbox Example" />
		</examples>
	</plugin>

	<plugin>
		<name>QFirebug</name>
		<description>Plugin that eases debugging of QCubed applications through
			integration with Firebug, an excellent Firefox extension for
			Javascript debugging. 
		</description>
		<version>0.1</version>
		<platform_version>1.1</platform_version>
		<author name="Eduardo Garcia aka enzo" email="enzo [at] anexusit [dot] com" />
		<files>
			<file type="misc_include" filename="QFirebug.class.php" />
			<file type="misc_include" filename="FirePHP.class.php" />
			<file type="misc_include" filename="fb.php" />

			<file type="example" filename="qfirebug.php" />
			<file type="example" filename="qfirebug.tpl.php" />
			<file type="example" filename="qfirebug.png" />
		</files>
		<includes>
			<include_files classname="QFirebug" filename="QFirebug.class.php" />
		</includes>
		<examples>
			<example filename="qfirebug.php" description="Introduction to Debugging with QFirebug" />
		</examples>
	</plugin>
</plugins>